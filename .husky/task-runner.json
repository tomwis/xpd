{
   "$schema": "https://alirezanet.github.io/Husky.Net/schema.json",
   "tasks": [
      {
          "name": "build",
          "group": "pre-commit",
          "command": "dotnet",
          "args": [ "build", "xpd.sln" ]
      },
      {
         "name": "run-convention-tests",
         "group": "pre-commit",
         "command": "dotnet",
         "args": [ "test", "tests/xpd.ConventionTests", "--no-build" ]
      },
      {
         "name": "run-unit-tests",
         "group": "pre-commit",
         "command": "dotnet",
         "args": [ "test", "tests/xpd.Tests", "--filter", "FullyQualifiedName~.Tests.UnitTests", "--no-build" ]
      },
      {
         "name": "commit-message-linter",
         "group": "commit-msg",
         "command": "dotnet",
         "args": [
            "artifacts/xpd.CommitLinter.dll",
            "--commit-file",
            "${args}",
            "--commit-message-config-file",
            "config/commit-message-config.json"
         ]
      }
   ]
}
