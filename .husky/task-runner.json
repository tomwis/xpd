{
   "$schema": "https://alirezanet.github.io/Husky.Net/schema.json",
   "tasks": [
      {
          "name": "build",
          "group": "pre-commit",
          "command": "dotnet",
          "args": [ "build", "xpd.sln" ]
      },
      {
         "name": "run-convention-tests",
         "group": "pre-commit",
         "command": "dotnet",
         "args": [ "test", "tests/xpd.ConventionTests" ]
      },
      {
         "name": "run-unit-tests",
         "group": "pre-commit",
         "command": "dotnet",
         "args": [ "test", "tests/xpd.tests", "--filter", "FullyQualifiedName~UnitTests" ]
      },
      {
         "name": "commit-message-linter",
         "group": "commit-msg",
         "command": "dotnet",
         "args": [
            "artifacts/xpd.CommitLinter.dll",
            "--commit-file",
            "${args}",
            "--commit-message-config-file",
            "config/commit-message-config.json"
         ]
      },
      {
         "name": "format-staged-files-with-csharpier",
         "group": "pre-commit",
         "command": "dotnet",
         "args": [ "csharpier", "${staged}" ],
         "include": [ "**/*.cs" ]
      },
      {
         "name": "format-staged-files-with-dotnet-format-style",
         "group": "pre-commit",
         "command": "dotnet",
         "args": [ "format", "style", "--include", "${staged}" ],
         "include": [ "**/*.cs" ]
      },
      {
         "name": "format-staged-files-with-dotnet-format-analyzers",
         "group": "pre-commit",
         "command": "dotnet",
         "args": [ "format", "analyzers", "--include", "${staged}" ],
         "include": [ "**/*.cs" ]
      }
   ]
}
